<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="@string/header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:textAppearanceLarge"
        android:textSize="34sp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/spotify"
        android:id="@+id/buttonSpotifyStreamer"
        android:layout_marginTop="21dp"
        android:background="#F08C35"
        android:layout_below="@+id/editText"
        android:onClick="spotifyToast"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scores"
        android:id="@+id/buttonScoresApp"
        android:layout_marginTop="20dp"
        android:background="#F08C35"
        android:layout_below="@+id/buttonSpotifyStreamer"
        android:layout_alignLeft="@+id/buttonSpotifyStreamer"
        android:layout_alignStart="@+id/buttonSpotifyStreamer"
        android:layout_alignRight="@+id/buttonSpotifyStreamer"
        android:layout_alignEnd="@+id/buttonSpotifyStreamer"
        android:onClick="scoresToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/library"
        android:id="@+id/buttonLibraryApp"
        android:layout_marginTop="20dp"
        android:background="#F08C35"
        android:layout_below="@+id/buttonScoresApp"
        android:layout_alignLeft="@+id/buttonScoresApp"
        android:layout_alignStart="@+id/buttonScoresApp"
        android:layout_alignRight="@+id/buttonScoresApp"
        android:layout_alignEnd="@+id/buttonScoresApp"
        android:onClick="libraryToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bib"
        android:id="@+id/buttonBuildItBigger"
        android:background="#F08C35"
        android:layout_below="@+id/buttonLibraryApp"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/buttonLibraryApp"
        android:layout_alignStart="@+id/buttonLibraryApp"
        android:layout_alignRight="@+id/buttonLibraryApp"
        android:layout_alignEnd="@+id/buttonLibraryApp"
        android:onClick="bibToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xyz"
        android:id="@+id/buttonXYZReader"
        android:background="#F08C35"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/buttonBuildItBigger"
        android:layout_alignLeft="@+id/buttonBuildItBigger"
        android:layout_alignStart="@+id/buttonBuildItBigger"
        android:layout_alignRight="@+id/buttonBuildItBigger"
        android:layout_alignEnd="@+id/buttonBuildItBigger"
        android:onClick="xyzToast" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capstone"
        android:id="@+id/buttonCapstone"
        android:background="#FF0000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/buttonXYZReader"
        android:layout_alignLeft="@+id/buttonXYZReader"
        android:layout_alignStart="@+id/buttonXYZReader"
        android:layout_alignRight="@+id/buttonXYZReader"
        android:layout_alignEnd="@+id/buttonXYZReader"
        android:onClick="capstoneToast" />


</RelativeLayout>
